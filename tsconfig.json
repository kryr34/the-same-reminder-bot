{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",
    "lib": [],

    /* Modules */
    "module": "commonjs",
    "rootDir": "./src",
	"baseUrl": "./src",
	"paths" :{
		"@/*": ["./*"]
	},
    "moduleResolution": "node",
    "resolveJsonModule": true,

    /* Emit */
    "sourceMap": true,
    "outDir": "./build",
    "newLine": "lf",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
	"alwaysStrict": true,
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
